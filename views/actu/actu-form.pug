extends ../layout

block content 
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container ")
            include ../includes/profile
        div(class="flex-fill ")
            form(action="/actu" method="post" class="card")
                div(class="card-header") Ecrivez une actu &#128526;
                div(class="card-body")
                    .form-group 
                        textarea(class="form-control" name="content" placeholder="Quoi de nouveau ?")= actu.content
                    if errors
                        ul(class="my-2")
                            each error in errors 
                                li(class="text-danger")= error 
                    div(class="w-100 mt-3") 
                        input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")